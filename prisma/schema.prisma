generator client {
  provider = "prisma-client-js"
}

generator trpc {
  provider             = "prisma-trpc-generator"
  withZod              = true
  withMiddleware       = false
  withShield           = false
  contextPath          = "../src/server/context"
  trpcOptionsPath      = "../src/server/trpcOptions"
  generateModelActions = "count,create,createMany,delete,deleteMany,findFirst,findFirstOrThrow,findMany,findUnique,findUniqueOrThrow,groupBy,update,updateMany,upsert"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  slug        String        @unique
  fullTitle   String
  title       String
  description String
  startTime   String
  endTime     String
  keyTags     KeyTag[]
  status      ProjectStatus
}

enum KeyTag {
  ReactJS
  NestJS
  NextJS
  SCL
  STL
  LAD
  Python
  CSharp
  CPlusPlus
  Electronics
  Robotics
}

enum ProjectStatus {
  IN_PROGRESS
  DROPPED
  FINISHED
  PROTOTYPE
  UNDEFINED
}
